const nextMenu = require('./next_menu');

module.exports = (bot, chatId) => {
  const options = {
    reply_markup: {
      keyboard: [
        ['üßæ Balance', 'üë• Referral'],
        ['‚úÖ Daily Task', 'üÜò Support'],
        ['üèÜ Achievement', 'üôç‚Äç‚ôÇÔ∏è Profile'],
        ['üöÄ Our Project', '‚û°Ô∏è Next Page']
      ],
      resize_keyboard: true,
    },
  };

  bot.sendMessage(chatId, 'üè† Main Menu:\nPlease select an option below:', options);

  // Listen for Next Page button
  bot.on('message', (msg) => {
    if (msg.text === '‚û°Ô∏è Next Page') {
      nextMenu(bot, msg.chat.id);
    }
  });
};